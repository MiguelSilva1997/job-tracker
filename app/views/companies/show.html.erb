<header>
  <h1>All Jobs for <strong><%= @company.name %></strong></h1>
  <h2><%= link_to "New Job", new_company_job_path(@company) %></h2>
</header>

<% @company.jobs.each do |job| %>
  <div class="card">
    <h1><%= job.title %></h1>
    <p><%= job.description %></p>
    <p><button><%=link_to "Show", company_job_path(job.company, job)%></button></p>
  </div>
<% end %>


<%= render partial: "contact_form" %>

<%= render partial: "contact", collection: @company.contacts.reverse %>
