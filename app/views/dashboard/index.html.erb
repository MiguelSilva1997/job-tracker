<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Companies', 'Level of Interest'],
          ['<%=@top_3_companies[0][0] %>',   parseInt("<%=@top_3_companies[0][1]%>")],
          ['<%=@top_3_companies[1][0] %>',   parseInt("<%=@top_3_companies[1][1]%>")],
          ['<%=@top_3_companies[2][0]%>',    parseInt("<%=@top_3_companies[2][1]%>")]
        ]);

        var options = {
          is3D: true,
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
        chart.draw(data, options);
      }
    </script>
  </head>
  <body class="dashboard">
    <section class="pie-chart-container">
      <h1>Top 3 Companies</h1>
      <div id="piechart_3d" style="width: 900px; height: 500px;"></div>
    </section>

    
  </body>


