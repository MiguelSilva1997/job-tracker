<header>
  <h1>All Categories</h1><br>
  <h2><%= link_to "New Category", new_category_path %></h2><br>
</header>
  <% @categories.each do |category|%>
  <div class="card">
    <h1><%= category.title %></h1>
    <p class="title">  <%= link_to "Edit", edit_category_path(category) %></p>
    <p><%= link_to "Delete", category_path(category), method: "delete" %></p>
    <p><button><%= link_to "Show", category_path(category) %></button></p>
  </div><br>
  <% end %>
