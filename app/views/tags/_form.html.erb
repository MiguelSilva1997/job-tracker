<%= form_for @tag do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %><br>

  <%= hidden_field_tag "tag[job_ids][]", nil %>
  <% Job.all.each do |job|%>
    <%= check_box_tag "tag[job_ids][]", job.id,
     @tag.job_ids.include?(job.id), id: dom_id(job) %>
    <%= label_tag dom_id(job), job.title %><br>
  <% end %>
  <%= f.submit %>
<% end %>
